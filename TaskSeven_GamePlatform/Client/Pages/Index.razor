@page "/"

<PageTitle>Game platform</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to gameplatform!</MudText>
<MudText Class="mb-8">A simple way to find and play board games online!</MudText>
<MudGrid>
    @for (int i = 0; i<20; i++)
    {
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardMedia Image="images/ttt.png" Height="200" />
                <MudCardContent>
                    <MudText Typo="Typo.h5">Tic Tac Toe</MudText>
                    <MudText Typo="Typo.body2">Play the classic Tic-Tac-Toe game</MudText>
                    <MudText Typo="Typo.body2">for free online with two players.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="tictactoe" Variant="Variant.Text" Color="Color.Primary">Play</MudButton>
                    <MudButton  Variant="Variant.Text" Color="Color.Primary">Help</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">

            <MudCard>
                <MudCardMedia Image="images/rps.png" Height="200" />
                <MudCardContent>
                    <MudText Typo="Typo.h5">Rock Paper Scissors</MudText>
                    <MudText Typo="Typo.body2">Play a game of Rock-Paper-Scissors</MudText>
                    <MudText Typo="Typo.body2">for free online with two players.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="rockpaperscissors" Variant="Variant.Text" Color="Color.Primary">Play</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Help</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }

</MudGrid>